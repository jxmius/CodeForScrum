<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="DashboardController" spacing="10" xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="←" onAction="#handleBack"/>
        <Label text="My Projects" styleClass="title"/>
    </HBox>
    <ListView fx:id="projectsList">
        <!-- List items will be added dynamically in the controller -->
    </ListView>
    <Button text="+ Add New Project" onAction="#handleAddNewProject"/>
    <VBox.margin>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </VBox.margin>
</VBox>