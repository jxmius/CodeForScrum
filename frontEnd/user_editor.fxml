<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:controller="UserEditorController" xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css" spacing="10" alignment="TOP_CENTER">
    <Button text="←" onAction="#handleBack" />
    <Text text="John Doe User Editor" styleClass="header-label" />
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="adminField" promptText="Admin"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <Button text="Edit" onAction="#handleEditUser"/>
</VBox>