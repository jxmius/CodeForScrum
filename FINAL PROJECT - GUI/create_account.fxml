<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:controller="CreateAccountController"
      alignment="CENTER" spacing="10.0" fillWidth="false" xmlns:fx="http://javafx.com/fxml">
    <Text text="Create New Account" />
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="passwordField" promptText="Password"/>
    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <Button text="Let's Go!" onAction="#handleCreateAccount"/>
    <VBox.margin>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </VBox.margin>
</VBox>
