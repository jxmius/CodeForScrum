<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox fx:controller="EditColumnsController" xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css" spacing="10">
    <Label text="Edit Columns in CSCE247" styleClass="header-label"/>
    <ListView fx:id="columnListView">
        <!-- Populate with column names in the controller -->
    </ListView>
    <TextField fx:id="newColumnNameField" promptText="New Column Name"/>
    <TextField fx:id="addUsersField" promptText="Add Users"/>
    <HBox spacing="10">
        <Button text="Add Column" onAction="#handleAddColumn"/>
        <Button text="Add User" onAction="#handleAddUser"/>
    </HBox>
</VBox>